@model GuidDetailViewModel



<div class="container">
    <div class="row">
        <div class="col-lg-6 col-sm-8 col-12 text-center">
            <div class="row">
            </div>
        </div>
    </div>
    <form class="mt-2" method="post">
        <div class="col-lg-6 col-sm-8 col-12 text-center">
            <div class="form-group row mt-4">
                <label asp-for="@Model.GuiDetail.Id" class="col-sm-5 col-form-label text-right">Guid</label>
                <div class="col-sm-6">
                    <input asp-for="GuiDetail.Id" type="text" class="form-control mr-5" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="GuiDetail.StatusId" class="col-sm-5 col-form-label text-right">Status</label>
                <div class="col-sm-6">
                    @if (Model.GuiDetail.StatusId == Status.Active)
                    {
                        <select class="form-control mr-5" asp-for="@Model.GuiDetail.StatusId" asp-items="Html.GetEnumSelectList<Status>()">
                        </select>
                    }
                    else
                    {
                        <select class="form-control mr-5" disabled asp-for="@Model.GuiDetail.StatusId" asp-items="Html.GetEnumSelectList<Status>()">
                        </select>
                    }
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="GuiDetail.CreationDate" class="col-sm-5 col-form-label text-right">Create Date</label>
                <div class="col-sm-6">
                    <input asp-for="GuiDetail.CreationDate" type="text" class="form-control mr-5" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="GuiDetail.ModifiedDate" class="col-sm-5 col-form-label text-right">Modified Date</label>
                <div class="col-sm-6">
                    <input asp-for="GuiDetail.ModifiedDate" type="text" class="form-control mr-5" readonly>
                </div>
            </div>
            @if(Model.GuiDetail.StatusId==Status.Ready)
            {

                <div class="form-group row">
                    <label asp-for="TextFile.FileName" class="col-sm-5 col-form-label text-right">Modified Date</label>
                    <div class="col-sm-6">
                        <input asp-for="TextFile.FileName" type="text" class="form-control mr-5" readonly>
                    </div>
                </div>

            }
           
            <div class="form-group row">
                    <a class="btn btn-primary" onclick="history.go(-1); return false;" href="#">Back</a><br />
                    <input type="submit" value="Submit" class="btn btn-success genric-btn primary" />
            </div>

        </div>

    </form>
</div>